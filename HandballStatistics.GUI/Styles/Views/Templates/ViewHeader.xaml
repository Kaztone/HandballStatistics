<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1. HEADER -->
    <!-- 1.1 Header: Grid -->
    <Style x:Key="grdHeader" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource bgrdSubHeaderBrush}"/>
    </Style>

    <!-- 1.1 Header: TextBlock -->
    <Style x:Key="txtblHeader" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="./#Open Sans"/>
        <Setter Property="Foreground" Value="{StaticResource fontColorPrimaryBrush}"/>
    </Style>

</ResourceDictionary>